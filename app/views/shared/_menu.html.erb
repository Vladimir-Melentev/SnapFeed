<%= provide :main_menu do %>
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><%= nav_tab 'Home', root_path,
                          class: 'nav-link px-2', current_page: current_page %></li>
          <li><%= nav_tab 'Feed', posts_path,
                          class: 'nav-link px-2', current_page: current_page %></li>

          <% if policy([:admin, :user]).index? %>
            <li><%= nav_tab "User menu", admin_users_path,
                            class: 'nav-link px-2', current_page: current_page %></li>
          <% end %>
        </ul>

        <div class="text-center">
          <% if policy(:post).new? %>
          <%= link_to 'New post', new_post_path, class: 'btn btn-danger' %>
         <% end %>
        </div>

<form class="d-flex ms-lg-auto" action="<%= posts_path %>" method="get">
  <div class="input-group input-group-sm">
    <%= select_tag 'tag_ids[]', options_from_collection_for_select(@tags || [], :id, :title, params[:tag_ids]),
     {include_blank: true, multiple: true, class: 'form-select', style: 'height: 30px;'} %>
    <button class="btn btn-outline-secondary" type="submit">Search</button>
  </div>
</form>

        <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
          <% if user_signed_in? %>
            <li class="dropdown">
              <%= nav_tab current_user.name_or_email, '#',
                          class: 'nav-link px-2 dropdown-toggle',
                          data: {"bs-toggle": 'dropdown'}, current_page: current_page %>

              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Edit profile', edit_user_path(current_user),
                              class: 'dropdown-item' %>
                </li>
                <li>
                  <%= link_to 'Log Out', session_path,
                              class: 'dropdown-item', data: {method: :delete} %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= nav_tab 'Sign Up', new_user_path,
                            class: 'nav-link px-2', current_page: current_page %></li>

            <li><%= nav_tab 'Log In', new_session_path,
                            class: 'nav-link px-2', current_page: current_page %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
<% end %>
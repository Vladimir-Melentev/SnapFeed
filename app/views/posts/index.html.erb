<h1>All posts</h1>

<% @posts.each do |post| %>

  <time datetime="<%= post.formatted_created_at %>">
    <%= post.formatted_created_at %>
  </time>

  <h2><%= post.title %></h2>

  <P>
    <%= post.body %>
    <br>
    <%= link_to "Show", post_path(post) %>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= link_to "Delete", post_path(post), data: {method: :delete, confirm: "Are you sure?"} %>
  </P>
<% end %>
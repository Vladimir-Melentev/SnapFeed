<%= render 'shared/errors', object: user %>

<%= form_with model: user do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-10">
      <%= f.email_field :email, placeholder: "E-mail", class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-10">
      <%= f.text_field :name, placeholder: "Name", class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-10">
      <%= f.password_field :password, placeholder: "Password", class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, placeholder: "Password_confirmation", class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-10">
      <%= f.select :role, user_roles, {}, placeholder: "Role", class: 'form-control form-control-lg' %>
    </div>
  </div>

  <% unless user.new_record? %>
    <div class="mb-3 row">
      <div class="col-sm-10">
        <%= f.password_field :old_password, placeholder: "Old password", class: 'form-control form-control-lg' %>
      </div>
    </div>
  <% end %>

  <%= f.submit (user.new_record? ? 'Sign Up' : 'Save'),
               class: 'btn btn-dark mt-4' %>
<% end %>